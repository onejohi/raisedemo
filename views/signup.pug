extends layout

block content
    nav.navbar.bg-light
        a.navbar-brand Signin to Raise Demo

    .container.p-1
        br
        br
        h3 Create a new account with us

        form#loginform(action='/auth/signup', method='POST')
            input.form-control#email(placeholder='email', name='email')
            br
            input.form-control#password(placeholder='password', name='password')
            br
            input.btn.btn-sm.btn-primary(type='submit', value='Create account')

    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js", integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js", integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k", crossorigin="anonymous")
    script(src="/js/main.js")